<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>ChewTracker</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
	</array>
	<key>WKWatchKitApp</key>
	<true/>
	<key>WKCompanionAppBundleIdentifier</key>
	<string>com.pulsetrack.ChewTracker</string>
	
	<!-- Health Kit -->
	<key>NSHealthShareUsageDescription</key>
	<string>ChewTracker needs access to your health data to track your meal information.</string>
	<key>NSHealthUpdateUsageDescription</key>
	<string>ChewTracker needs permission to save your meal data to HealthKit.</string>
	
	<!-- Location Services -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>ChewTracker uses your location to detect when you're at a restaurant and suggest meal tracking.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>ChewTracker uses your location to detect when you're at a restaurant and suggest meal tracking.</string>
	
	<!-- Microphone for Voice Feedback -->
	<key>NSMicrophoneUsageDescription</key>
	<string>ChewTracker uses the microphone to provide voice feedback during your meals.</string>
	
	<!-- Motion Usage -->
	<key>NSMotionUsageDescription</key>
	<string>ChewTracker uses motion data to detect chewing patterns during meals.</string>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
		<string>location</string>
	</array>
	<key>WKBackgroundModes</key>
	<array>
		<string>workout-processing</string>
	</array>
</dict>
</plist>

